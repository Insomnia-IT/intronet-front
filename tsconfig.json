{
  "extends": "@cmmn/tools/compile/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@hooks": ["./src/hooks"],
      "@icons": ["./src/icons"],
      "@constants": ["./src/constants"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@api": ["./src/api"],
      "@stores": ["./src/stores"],
      "@stores/*": ["./src/stores/*"]
    },
    "types": [
      "preact",
      "node"
    ]
  },
  "include": [
    "service-worker/*.ts",
    "service-worker/*.json",
    "server/**/*.json",
    "server/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    ".private/**/*.json",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.tsx"
  ]
}
